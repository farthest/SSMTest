<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.dao.StudentMapper">
    <!--这里的type，因为我在spring-mybatis.xml中配置了包的简称，所以不需要再写包名了，否则需要加上，id的话在后面的ResultMap中会用到，如果像我这样实体类的属性和数据库字段名不一致，则需要用ResultMap作为返回值，否则获取的值的字段会变成null-->
    <!--<resultMap type="BoxDetail" id="BoxDetailMap">-->
        <!--<result property="boxId" column="BOX_ID"/>-->
    <!--</resultMap>-->
    <!--id必须和对应的mapper.java的方法名称相同，不管返回类型是List还是只有一个，resultMap或resultType都是一样的-->
    <!--<select id="addStudent" parameterType="String" resultMap="Integer">-->
        <!--INSERT student() VALUE BOX_ID = #{boxId}-->
    <!--</select>    -->
    <resultMap id="studentResultMap" type="com.ssm.po.Student">
        <id property="id" column="id" javaType="Integer" jdbcType="INTEGER" />
        <result property="no" column="no" javaType="String"
                jdbcType="VARCHAR" />
        <result property="name" column="name" javaType="String"
                jdbcType="VARCHAR" />
    </resultMap>

    <select id="findStudentById" parameterType="Integer" resultMap="studentResultMap">
      SELECT * FROM student WHERE id = #{id}
    </select>
</mapper>